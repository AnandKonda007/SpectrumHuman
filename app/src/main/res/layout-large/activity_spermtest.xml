            android:layout_width="315dp"
            android:layout_height="315dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/ic_spermtest"
            />
        <com.example.wave.spectrumhuman.FONTS.BoldTextViewFontStyle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sperutest"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorwhite"
            android:textSize="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150dp"
            />
        <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sperumsg"
            android:textColor="@color/colorwhite"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</RelativeLayout>