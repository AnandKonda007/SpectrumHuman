<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:clickable="true"
    android:focusableInTouchMode="true">



    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp">
        <com.example.wave.spectrumhuman.FONTS.ButtonFontStyle
            android:layout_width="25dp"
            android:id="@+id/home_button"
            android:background="@drawable/ic_leftarrow"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/appicon" />
    </RelativeLayout>

    <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
        android:id="@+id/logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:text="@string/changepassword"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <ScrollView
        android:id="@+id/ScrollView_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:layout_below="@+id/logintext"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/l_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:orientation="vertical">




                <RelativeLayout
                    android:id="@+id/rl_psw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp">

                    <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:text="@string/oldpassword"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />


                    <com.example.wave.spectrumhuman.FONTS.EditTextFontStyle
                        android:id="@+id/edit_oldpassword"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:singleLine="true"

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageshow"

                        android:layout_alignRight="@id/edit_oldpassword"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/ic_eye" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/colorWhite" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_conformpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                    <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/conformpassword"
                        android:text="@string/newpassword"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />


                    <com.example.wave.spectrumhuman.FONTS.EditTextFontStyle
                        android:id="@+id/edit_newpassword"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:layout_alignRight="@id/edit_newpassword"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="32dp"
                        android:id="@+id/imageshowone"

                        android:background="@drawable/ic_eye" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/colorWhite" />

                </RelativeLayout>




                <com.example.wave.spectrumhuman.FONTS.ButtonFontStyle
                    android:id="@+id/done"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/l2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/cell_shape"
                    android:paddingBottom="2dp"
                    android:text="@string/done"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>