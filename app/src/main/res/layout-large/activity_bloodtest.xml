<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:background="@color/colorlightgreen"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:layout_marginTop="100dp"
            android:id="@+id/img_blood"
            android:background="@drawable/ic_bloodtest"
            android:layout_centerHorizontal="true"/>
        <com.example.wave.spectrumhuman.FONTS.BoldTextViewFontStyle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bloodtest"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorwhite"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150dp"
            />
        <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bloodmsg"
            android:textColor="@color/colorwhite"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            />
    </RelativeLayout>

</RelativeLayout>