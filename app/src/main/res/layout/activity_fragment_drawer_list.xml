<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:id="@+id/main"
    android:background="@drawable/ic_bg1"
    >
    <RelativeLayout
        android:id="@+id/rlUserLogin"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_admin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_toEndOf="@+id/imageView_admin"
            android:layout_toRightOf="@+id/imageView_admin">
            <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                android:id="@+id/textUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textUsername"
                android:id="@+id/txt_age"
                android:text="Age 50"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff" />
            <com.example.wave.spectrumhuman.FONTS.BoldTextViewFontStyle
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:layout_below="@+id/textUsername"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#ffffff" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="30dp">
        <com.example.wave.spectrumhuman.FONTS.BoldTextViewFontStyle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member"
            android:id="@+id/members"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_marginTop="35dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/rllist"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_width="fill_parent"
            android:id="@+id/recycler_addmember"
            android:scrollbars="vertical"
            android:layout_height="140dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_addmember"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="+"/>
        <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:id="@+id/addmember"
            android:layout_marginLeft="100dp"
            android:text="@string/addmember"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_marginTop="40dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/l_items"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_addfamilydoctor"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_doctor"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    />
                <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:textColor="#ffffff"
                    android:id="@+id/familydoctor"
                    android:textSize="15dp"
                    android:text="@string/addfamilydoctor"/>
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_finddoctors"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_finddoctor"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    />
                <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:textColor="#ffffff"
                    android:id="@+id/doctors"
                    android:textSize="15dp"
                    android:text="@string/finddoctors"/>
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_mydevice"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_mydevice"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    />
                <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:textColor="#ffffff"
                    android:id="@+id/mydevice"
                    android:textSize="15dp"
                    android:text="@string/mydevice"/>
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/language"
                android:layout_marginTop="5dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_language"
                    />
                <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:textColor="#ffffff"
                    android:id="@+id/languages"
                    android:textSize="15dp"
                    android:text="@string/langage"/>
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/rl_contactUs"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_mail"
                    android:layout_centerVertical="true"
                    />
                <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:id="@+id/contactus"
                    android:text="@string/contactus"/>
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_right"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/aboutus"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_user"
                    />
                <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:id="@+id/about"
                    android:text="@string/aboutus"/>
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_right"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/rl_cgpsw"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lock"
                    />
                <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:text="@string/changepsw"
                    android:id="@+id/changepassword" />
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_right"
                    android:layout_alignBottom="@+id/changepassword"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/rl_logout"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_logout"
                    />
                <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:id="@+id/logout"
                    android:text="@string/logout"/>
                <!--<Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right"
                    android:layout_alignParentRight="true"/>-->
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
