<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <com.example.wave.spectrumhuman.FONTS.BoldTextViewFontStyle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/step1"
            android:id="@+id/stepone"
            android:textColor="@color/colortheam"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/animation"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_boul_1"
            android:layout_marginTop="55dp"
            android:visibility="visible" />

        <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
            android:id="@+id/urinetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <com.example.wave.spectrumhuman.FONTS.BoldTextViewFontStyle
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:text="@string/skip"
            android:textColor="@color/colortheam"
            android:textSize="18dp" />

        <!--<View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@color/colortheam" />-->

    </RelativeLayout>

</RelativeLayout>