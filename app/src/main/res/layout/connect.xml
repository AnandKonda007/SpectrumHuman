<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="150dp"
    android:background="@drawable/layout_cornerbg"
    android:orientation="vertical">


    <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
        android:id="@+id/textSSID1"
        android:textColor="@color/colorLightGray"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.wave.spectrumhuman.FONTS.EditTextFontStyle
        android:id="@+id/textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightGray"
        android:layout_below="@id/textSSID1"
        android:layout_marginTop="15dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginTop="35dp"
        android:layout_below="@id/textPassword"
        android:layout_height="40dp">
        <com.example.wave.spectrumhuman.FONTS.ButtonFontStyle
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#223559"
            android:text="Cancel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />


        <com.example.wave.spectrumhuman.FONTS.TextViewFontStyle
            android:id="@+id/textView2"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />


        <com.example.wave.spectrumhuman.FONTS.ButtonFontStyle
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#223559"
            android:text="Connect"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>


